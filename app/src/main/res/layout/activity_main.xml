<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Information"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/student_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:background="#D7BDE2"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxEms="20"
            android:maxLength="20"
            android:minEms="10"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/father_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:background="#D7BDE2"
            android:hint="Father Name"
            android:inputType="textPersonName"
            android:maxEms="20"
            android:maxLength="20"
            android:minEms="10"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@+id/student_Name"
            tools:layout_editor_absoluteX="25dp" />

        <EditText
            android:id="@+id/mother_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:background="#D7BDE2"
            android:hint="Mother Name"
            android:inputType="textPersonName"
            android:maxEms="20"
            android:maxLength="20"
            android:minEms="10"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@+id/father_Name"
            tools:layout_editor_absoluteX="51dp" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:background="#D7BDE2"
            android:hint="Phone Number"
            android:inputType="number"
            android:maxEms="10"
            android:maxLength="10"
            android:minEms="10"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@+id/mother_Name"
            tools:layout_editor_absoluteX="82dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:backgroundTint="#D7BDE2"
            android:text="Submit"
            app:layout_constraintStart_toStartOf="@+id/phone_number"
            app:layout_constraintTop_toBottomOf="@+id/phone_number" />

        <Button
            android:id="@+id/viewusers"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#D7BDE2"
            android:text="View Saved"
            app:layout_constraintBottom_toBottomOf="@+id/submit"
            app:layout_constraintEnd_toEndOf="@+id/phone_number"
            app:layout_constraintTop_toTopOf="@+id/submit" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>